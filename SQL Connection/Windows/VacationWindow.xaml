<mahapps:MetroWindow x:Class="SQL_Connection.VacationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQL_Connection"
        xmlns:mahapps="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        GlowBrush="{DynamicResource AccentColorBrush}"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="Отпуск" Height="270" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="10">
            <Label Content="Дата начала" Margin="15,0,15,0"/>
            <DatePicker x:Name="DPBegin" Margin="15,0,15,0"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Margin="10">
            <Label Content="Дата окончания" Margin="15,0,15,0"/>
            <DatePicker x:Name="DPEnd" Margin="15,0,15,0"/>
        </StackPanel>
        <Button x:Name="ButOK" Grid.Row="2" Content="Сохранить" Margin="50,20" Click="ButOK_Click"/>
    </Grid>
</mahapps:MetroWindow>
