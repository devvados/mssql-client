@model IEnumerable<Web_Application.Models.Emps>

@{
    ViewBag.Title = "Список сотрудников";
}

<div>
    <br/>
    <div style="display:block;float:left;">
        <h2>
            Сотрудники
        </h2>
    </div>

    <div style="display:block;float:right;">
        <a><input type="button" class="btn btn-primary btn-lg" value="Добавить сотрудника" onclick="location.href='@Url.Action("Create", "Emps")'" /></a>
    </div>
    <br/>
</div>

